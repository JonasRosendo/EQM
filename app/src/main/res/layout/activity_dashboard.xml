<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.softpeach.www.eqm.br.com.softpeach.www.eqm.screens.DashboardActivity">

    <ImageButton
        android:id="@+id/ibtn_add"
        style="@android:style/Widget.DeviceDefault.Light.ImageButton"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorPrimary"
        android:scaleType="centerCrop"
        android:tint="@android:color/background_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@drawable/group" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Dashboard"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New Elder"
        app:layout_constraintEnd_toEndOf="@+id/ibtn_add"
        app:layout_constraintStart_toStartOf="@+id/ibtn_add"
        app:layout_constraintTop_toBottomOf="@+id/ibtn_add" />

    <ImageButton
        android:id="@+id/ibtn_attendance"
        style="@android:style/Widget.DeviceDefault.Light.ImageButton"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginEnd="40dp"
        android:background="@color/colorPrimary"
        android:scaleType="centerCrop"
        android:tint="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="@+id/ibtn_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ibtn_add"
        app:srcCompat="@drawable/resume" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Attendance"
        app:layout_constraintEnd_toEndOf="@+id/ibtn_attendance"
        app:layout_constraintStart_toStartOf="@+id/ibtn_attendance"
        app:layout_constraintTop_toBottomOf="@+id/ibtn_attendance" />

    <ImageButton
        android:id="@+id/ibtn_search"
        style="@android:style/Widget.DeviceDefault.Light.ImageButton"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimary"
        android:scaleType="fitCenter"
        android:tint="@android:color/background_light"
        app:layout_constraintEnd_toEndOf="@+id/ibtn_add"
        app:layout_constraintStart_toStartOf="@+id/ibtn_add"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:srcCompat="@drawable/group2" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Search"
        android:textAlignment="textStart"
        app:layout_constraintEnd_toEndOf="@+id/ibtn_search"
        app:layout_constraintStart_toStartOf="@+id/ibtn_search"
        app:layout_constraintTop_toBottomOf="@+id/ibtn_search" />

    <ImageButton
        android:id="@+id/ibtn_statistics"
        style="@android:style/Widget.DeviceDefault.Light.ImageButton"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimary"
        android:scaleType="fitCenter"
        android:tint="@android:color/background_light"
        app:layout_constraintEnd_toEndOf="@+id/ibtn_attendance"
        app:layout_constraintStart_toStartOf="@+id/ibtn_attendance"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:srcCompat="@drawable/linechart" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Statistics"
        android:textAlignment="textStart"
        app:layout_constraintEnd_toEndOf="@+id/ibtn_statistics"
        app:layout_constraintStart_toStartOf="@+id/ibtn_statistics"
        app:layout_constraintTop_toBottomOf="@+id/ibtn_statistics" />

    <ImageButton
        android:id="@+id/ibtn_meetings"
        style="@android:style/Widget.DeviceDefault.Light.ImageButton"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimary"
        android:scaleType="centerCrop"
        android:tint="@android:color/background_light"
        app:layout_constraintEnd_toEndOf="@+id/ibtn_statistics"
        app:layout_constraintStart_toStartOf="@+id/ibtn_search"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:srcCompat="@drawable/meeting" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Meeting Day"
        app:layout_constraintEnd_toEndOf="@+id/ibtn_meetings"
        app:layout_constraintStart_toStartOf="@+id/ibtn_meetings"
        app:layout_constraintTop_toBottomOf="@+id/ibtn_meetings" />

</android.support.constraint.ConstraintLayout>
